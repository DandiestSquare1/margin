doctype html
html
  head
    title= title
    link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400|Open+Sans:400,300', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block styles
  body(ng-app='MarginApp', ng-controller='MainCntrl', ng-init='uid = #{JSON.stringify(uid)}; init(uid);')
    .navbar.navbar-default
        .container
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/', ng-hide='uid') M
                a.navbar-brand(href='/dashboard', ng-show='uid') M
            .navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-left(ng-hide='uid')
                    li
                        a(href='/about') About
                ul.nav.navbar-nav.navbar-right(ng-show='uid')
                    li
                        a(href='/sign_out') Sign Out
                form.navbar-form.navbar-right(ng-show='uid', method='get')
                    .form-group
                        input.form-control.stock-control(enter-press='{{stockTicker}}', type='text', name='stockTicker', ng-model='stockTicker', placeholder='Stock Ticker')
                p.navbar-text.navbar-right(ng-show='uid') {{user.userName}}
                ul.nav.navbar-nav.navbar-right(ng-hide='uid')
                    li
                        a(href='/sign_up') Sign Up
                    li
                        a(href='/sign_in') Sign In
    .container
        block content
            block flash
    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(src='/bower_components/underscore/underscore-min.js')
    script(src='/bower_components/q/q.js')
    script(src='/bower_components/angular/angular.min.js')
    script(src='/javascripts/app.js')
    script(src='/javascripts/controllers.js')
    script(src='/javascripts/services.js')
    script(src='/javascripts/directives.js')
    block scripts
